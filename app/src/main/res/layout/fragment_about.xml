<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.about">

    <View
        android:id="@+id/topView"
        android:layout_width="match_parent"
        android:layout_height="270dp"
        android:backgroundTint="@color/darkgreen"
        android:background="@drawable/varbg"/>

    <ImageView
        android:id="@+id/aboutleft"
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:src="@drawable/ic_left_arrow"
        android:layout_marginLeft="20dp"/>
    <TextView
        android:id="@+id/ptitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="about me"
        android:textColor="#fff"
        android:textStyle="bold"
        android:textSize="20sp"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"/>

    <ImageView

        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginTop="120dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/me"
        android:background="@drawable/shape"
        android:scaleType="centerCrop"
        android:id="@+id/pimage"/>

    <TextView
        android:id="@+id/pname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Manar kamal matarya"
        android:gravity="center"
        android:textColor="@color/dark"
        android:layout_below="@id/pimage"
        android:textSize="18sp"
        android:layout_margin="20dp"/>

    <LinearLayout
        android:id="@+id/plin1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/pname"
        android:layout_marginLeft="120dp"
        android:layout_marginRight="120dp"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/pemail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/ic_baseline_email_24" />

        <ImageView
            android:id="@+id/pphone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/ic_baseline_local_phone_24" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/plin2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/plin1"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginLeft="10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="21 years old"
                android:layout_marginTop="50dp"
                android:drawablePadding="20dp"
                android:drawableLeft="@drawable/ic_circular_line_with_word_age_in_the_center"/>

            <TextView
                android:id="@+id/textView8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_mortarboard"
                android:drawablePadding="20dp"
                android:layout_marginTop="10dp"
                android:text="it in alaqsa university" />

            <TextView
                android:id="@+id/textView9"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_level"
                android:drawablePadding="20dp"
                android:layout_marginTop="10dp"
                android:text="Level #3" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginLeft="5dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="About me" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" />

            <TextView
                android:id="@+id/line"
                android:layout_width="match_parent"
                android:layout_height="28dp"
                android:layout_below="@+id/noAccount"
                android:layout_marginRight="10dp"
                android:drawableLeft="@drawable/line"
                android:textColor="#fff"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView11"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="A project for the mobile application development course 2 at Al-Aqsa University, third level, with Eng. Raed Bulbul, which is an application to order furniture from a specific qallery remotely" />
        </LinearLayout>
    </LinearLayout>


</RelativeLayout>