<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.profile">

    <View
        android:id="@+id/topView"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="@color/darkgreen" />

    <View
        android:id="@+id/view5"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@drawable/wave"
        android:layout_below="@+id/topView" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="35dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="30dp"
        android:src="@drawable/ic_man_user"/>

    <TextView
        android:id="@+id/topText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="My Profile"
        android:textColor="@android:color/white"
        android:textSize="30sp"
        android:textStyle="bold"
        android:layout_marginTop="70dp"
        android:layout_marginLeft="30dp" />

    <TextView
        android:id="@+id/pname"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/bg_edittext"
        android:textColor="@color/dark"
        android:text="manarkamal"
        android:paddingTop="10sp"
        android:textSize="16sp"
        android:paddingLeft="18dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_below="@+id/view5"/>

    <TextView
        android:id="@+id/pemail"
        android:textColor="@color/dark"
        android:text="manarkamal@gmail.com"
        android:paddingTop="10sp"
        android:textSize="16sp"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginTop="14dp"
        android:background="@drawable/bg_edittext"
        android:hint="E-mail"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:paddingLeft="18dp"
        android:layout_below="@+id/pname"/>

    <TextView
        android:textColor="@color/dark"
        android:text="rafah"
        android:paddingTop="10sp"
        android:textSize="16sp"
        android:id="@+id/paddress"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginTop="14dp"
        android:background="@drawable/bg_edittext"
        android:hint="Address"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:paddingLeft="18dp"
        android:layout_below="@+id/pemail"/>

    <TextView
        android:textColor="@color/dark"
        android:text="123456"
        android:paddingTop="10sp"
        android:textSize="16sp"
        android:id="@+id/ppassword"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginTop="14dp"
        android:background="@drawable/bg_edittext"
        android:hint="Password"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:paddingLeft="18dp"
        android:inputType="numberPassword"
        android:layout_below="@+id/paddress"/>

    <Button
        android:id="@+id/pbtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:backgroundTint="@color/darkgreen"
        android:background="@drawable/bg_edittext"
        android:text="Reset Password"
        android:layout_below="@id/ppassword"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:textColor="#FFFFFF"
        android:textSize="16dp" />

</RelativeLayout>